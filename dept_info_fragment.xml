<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="15dp"
            android:background="#888"
            android:elevation="5dp"
            android:padding="10dp"
            android:src="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:id="@+id/departmentNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:gravity="center"
            android:padding="5dp"
            android:text="Name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#888"
            android:elevation="3dp"
            android:text="New Text" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/phoneNo1Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="testMethod"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/Info_fields_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone No. 1" />

                <TextView
                    android:id="@+id/phoneNoTextView1"
                    style="@style/Info_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaa"
                android:elevation="1dp" />

            <LinearLayout
                android:id="@+id/phoneNo2Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="testMethod"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/Info_fields_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone No. 2" />

                <TextView
                    android:id="@+id/phoneNoTextView2"
                    style="@style/Info_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaa"
                android:elevation="1dp" />

            <LinearLayout
                android:id="@+id/websiteLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    style="@style/Info_fields_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visit Web" />

                <TextView
                    android:id="@+id/webTextView"
                    style="@style/Info_info_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.iitr.ac.in/department" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#aaa"
                android:elevation="1dp" />


        </LinearLayout>

        <ImageView
            android:id="@+id/mapIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="mapsClick"
            android:src="@drawable/maps_icon" />

    </LinearLayout>
</ScrollView>


